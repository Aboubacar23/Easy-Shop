{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container-block mb-5">
    <h3>Cr√©er un Compte</h3>
    <hr>
        {{ form_start(registrationForm) }}
        <div class="row">
            <div class="col-md-12">{{ form_row(registrationForm.nom) }}</div>
            <div class="col-md-12">{{ form_row(registrationForm.prenom) }}</div>
            <div class="col-md-12">{{ form_row(registrationForm.email) }}</div>
            <div class="col-md-12">{{ form_row(registrationForm.roles) }}</div>
            <div class="col-md-12">{{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}</div>
            <div class="col-md-12">{{ form_row(registrationForm.agreeTerms) }}</div>
        </div>
        <hr>
        <div class="row">
            <button type="submit" class="btn btn-primary btn-sm">Enregistre</button>
        </div>
    
        {{ form_end(registrationForm) }}
</div>
{% endblock %}
