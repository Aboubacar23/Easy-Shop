<div class="container">
    {{ form_start(form) }}
    <div class="row">
        <div class="mb-2 col-md-12">{{ form_row(form.libelle) }}</div>
        <div class="mb-2 col-md-6">{{ form_row(form.nom) }}</div>
        <div class="mb-2 col-md-6">{{ form_row(form.prenom) }}</div>
        <div class="mb-2 col-md-6">{{ form_row(form.compagnie) }}</div>
        <div class="mb-2 col-md-6">{{ form_row(form.adresse) }}</div>
        <div class="mb-2 col-md-6">{{ form_row(form.postale) }}</div>
        <div class="mb-2 col-md-6">{{ form_row(form.ville) }}</div>
        <div class="mb-2 col-md-6">{{ form_row(form.pays) }}</div>
        <div class="mb-2 col-md-6">{{ form_row(form.telephone) }}</div>
    </div>
    <hr>
    <div class="row">
        <button class="btn btn-primary btn-sm">{{ button_label|default('Ajouter') }}</button>
    </div>
    {{ form_end(form) }}
</div>
